<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListPractice.FoodDetailsPage"
             Title="FoodDetailsPage">
    <Grid RowDefinitions="Auto,Auto,*"
          Padding="20">
        <Image x:Name="ImgFood"
               HeightRequest="500"
               Grid.Row="0"/>
        <Label x:Name="LblFoodName"
               FontSize="Title"
               Grid.Row="1"/>
        <Label x:Name="LblSentence"
               FontSize="Subtitle"
               Grid.Row="2"/>
    </Grid>
</ContentPage>